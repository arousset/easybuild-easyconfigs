dependencies = [
    ('XDEM-devel'     , version        ,                       versionsuffix),
    ('Python'         , '2.7.11'       ,                                  '', full_toolchain),
    ('h5py'           , '2.5.0'        , '-Python-2.7.11-HDF5-1.8.16-serial', full_toolchain),
    ('ParaView'       , '4.4.0'        ,                                  '', full_toolchain),
    ('R'              , '3.2.3'        ,                             '-bare', full_toolchain),
    ('R-bundle-XDEM'  , '20160525'     ,                          '-R-3.2.3', full_toolchain),
    ('GDB'            , '7.11'         ,                    '-Python-2.7.11', full_toolchain),
    ('Valgrind'       , '3.11.0'       ,                                  '', full_toolchain),
]


moduleclass = 'toolchain'
