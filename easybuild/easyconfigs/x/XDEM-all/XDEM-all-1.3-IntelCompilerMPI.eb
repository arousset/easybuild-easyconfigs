easyblock = "Toolchain"

name = 'XDEM-all'
version = '1.3'
versionsuffix = '-IntelCompilerMPI'

homepage = 'http://luxdem.uni.lu/'
description = """Module bundle that contains all the dependencies required to compile XDEM"""

toolchain = {'name': 'dummy', 'version': 'dummy'}

